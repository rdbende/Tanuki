{
  "id" : "io.github.rdbende.Tanuki",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "46",
  "sdk" : "org.gnome.Sdk",
  "command" : "io.github.rdbende.Tanuki",
  "finish-args" : [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "cleanup" : [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules" : [
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "cleanup": [ "*" ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
          "tag": "v0.10.0"
        }
      ]
    },
    {
      "name" : "tanuki",
      "builddir" : true,
      "buildsystem" : "meson",
      "sources" : [
        {
          "type" : "git",
          "path" : "."
        }
      ]
    }
  ]
}
